# verify permissions (mostly in parallel in the background)
#   chown radarr:radarr /media /downloads /incomplete /watch /radarr /opt/Radarr
#     find /radarr ! -user radarr -exec chown radarr:radarr {} \;
#     find /opt/Radarr ! -user radarr -exec chown radarr:radarr {} \;
#     find /tmp ! -user radarr -exec chown radarr:radarr {} \;
#     find /media ! -user radarr -exec chown radarr:radarr {} \; &
#     find /downloads ! -user radarr -exec chown radarr:radarr {} \; &
#     find /incomplete ! -user radarr -exec chown radarr:radarr {} \; &
#     find /watch ! -user radarr -exec chown radarr:radarr {} \; &
